<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/order_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/order_static"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#DF5333"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/order_makedate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#113F67"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/order_menus_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#282f44"
            android:textSize="14sp" />
        
         <TextView
            android:id="@+id/order_menus_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#282f44"
            android:textSize="14sp" />
         
    </LinearLayout>

    <TextView
        android:id="@+id/order_deskid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#113F67"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/order_peoplenumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#113F67"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/order_reservedate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#113F67"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/order_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:text="订单总价"
        android:textSize="16sp" />

</LinearLayout>